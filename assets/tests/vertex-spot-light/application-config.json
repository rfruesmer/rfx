{
  "application": {
    "name": "rfx - Per-Vertex Spot Light Demo",
    "logLevel": "TRACE"
  },
  "graphics": {
    "resolution": {
      "x": 1600,
      "y": 1000
    },
    "effect_defaults": [
      {
        "id": "vertex_spot_light",
        "vertexFormat": [
          "COORDINATES",
          "NORMALS"
        ],
        "vertexShaderPath": "assets/common/shaders/spot_light.vert",
        "fragmentShaderPath": "assets/common/shaders/color.frag",
        "material": {
          "ambient": [ 0, 0, 0, 1 ],
          "diffuse": [ 0, 1, 0, 1 ],
          "specular": [ 1, 0, 0, 1 ],
          "emissive": [ 0, 0, 0, 1 ],
          "shininess": 16 
        }
      }
    ]
  },
  "scene": {
    "camera": {
      "position": [ 0, 5, 25 ],
      "lookAt": [ 0, 0, 0 ],
      "up": [ 0, 1, 0 ],
      "projection": {
        "fov": 45,
        "aspect": 1,
        "nearZ": 0.1,
        "farZ": 10000
      }
    },
    "models": [
      {
        "path": "assets/common/models/plane.obj",
        "effect": {
          "id": "vertex_spot_light"
        }
      }
    ],
    "lights": [
      {
        "id": "spot",
        "type": "spot",
        "ambient": [ 0, 0, 0 ],
        "diffuse": [ 1, 1, 1 ],
        "specular": [ 1, 1, 1 ],
        "position": [ 0, 5, 0 ],
        "direction": [ 0, -1, 0 ],
        "attenuation": [ 1, 0, 0 ],
        "spotExponent": 2,
        "spotCutoff": 45
      }
    ]
  }
}
